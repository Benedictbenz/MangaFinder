<%- include("partials/header.ejs") %>

<div class="body_container_search">
    <!-- 
    ==========================
    SEARCH RESULT 
    ==========================
    -->
    <% if(locals.itemsearched){%>
        <h1>Search result for: <%= itemsearched %></h1>
        <p>Results: <%= searchResult.pagination.items.total  %></p>
        

        <div class="searchResult_container">

            <% searchResult.data.forEach(item => { %>
            <!-- BOX -->
            <form action="/" method="get">  
                <input type="hidden" name="id" value="">
                <button type="submit" class="anime_manga_box">
                        <img src="<%=item.images.jpg.image_url%>" class="anime_manga_image">
                        <p ><%= item.title %></p>
                </button>
            </form>

            <% }); %>
        </div>


        

        <div class="pageNumbers">
        <% for(index =0; index<searchResult.pagination.last_visible_page; index++){%>
            <form action="/search" method="post">
                <input type="hidden" name="searchquery" value="<%= itemsearched %>">
                <input type="hidden" name="page" value="<%= index+1 %>">
                <button type="submit" class="pageNumberStyle"><%= index+1 %></button>
            </form>
        <% } %>
        </div>


    <!-- 
    ==========================
    SEARCH BAR
    ==========================
     -->
    <%} else {%>
    <form action="/search" method="post">
        <input type="text" id="searchy" name="searchquery" placeholder="Search" autocomplete="off" class="searchDesign">
    </form>
    <%} %>
</div>


<!-- FOOTER -->
<%- include("partials/footer.ejs") %>